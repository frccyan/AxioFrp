{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "types": ["node"],
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": [
    "vite.config.ts",
    "vite.config.js",
    "scripts/**/*",
    "**/*.config.ts",
    "**/*.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}